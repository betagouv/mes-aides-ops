<% ssl_section = %{

  ssl_certificate     /etc/letsencrypt/live/#{@name}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/#{@name}/privkey.pem;

  include snippets/ssl_params.conf;

  access_log          /var/log/nginx/#{@name}.ssl.access.log combined;
  error_log           /var/log/nginx/#{@name}.ssl.error.log;

} %>

<% if @use_ssl %>
server {

  listen              *:80<% if @is_default %> default_server<% end %>;
  server_name         <%= @name %>;

  location /.well-known {
    root              <%= @webroot_path %>;
  }

  location / {
    return            302 https://<%= @name %>$request_uri;
  }

}
<% end %>

server {

  server_name         www.<%= @name %>;

  <% if @use_ssl %>
  listen              443 ssl;
  <%= ssl_section %>
  access_log          /var/log/nginx/#{@name}.ssl.access.log combined;
  error_log           /var/log/nginx/#{@name}.ssl.error.log;
  <% else %>
  listen              *:80;
  access_log          /var/log/nginx/<%= @name %>.access.log combined;
  error_log           /var/log/nginx/<%= @name %>.error.log;
  <% end %>

  location / {
    return            302 https://<%= @name %>$request_uri;
  }

}

server {

  server_name         <%= @name %>;

  <% if @use_ssl %>
  listen              443 ssl;
  <%= ssl_section %>
  access_log          /var/log/nginx/#{@name}.ssl.access.log combined;
  error_log           /var/log/nginx/#{@name}.ssl.error.log;
  <% else %>
  listen              *:80<% if @is_default and !@use_ssl %> default_server<% end %>;
  access_log          /var/log/nginx/<%= @name %>.access.log combined;
  error_log           /var/log/nginx/<%= @name %>.error.log;
  <% end %>

  gzip                on;
  gzip_proxied        any;
  gzip_types          application/json
                      application/javascript
                      text/css
                      text/plain
                      text/xml;
  gzip_vary           on;

  <% if defined? @nginx_root %>
  root <%= @nginx_root %>;
  <% end %>

  include snippets/mes-aides-static.conf;

  # WARNING
  # Everything in app/ or dist/ will be served directly by Nginx
  # Do not put any sensitive file there
  location / {
    try_files /dist$uri /app$uri @default;
  }

  location @default {
    proxy_pass        <%= @proxied_endpoint %>;
    proxy_redirect    off;
  }
}
