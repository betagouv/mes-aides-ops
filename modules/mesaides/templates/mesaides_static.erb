location /favicon.ico {
  rewrite ^.*$ /img/favicon/favicon.ico;
}

location ~ ^/(partials|content-pages) {
  try_files /app/views$uri =404;
}

location ~ ^/js/lib {
  rewrite ^(/js/lib)(/.*)$ /node_modules$2;
}

location ~ ^/node_modules {
  try_files $uri =404;
}

location ~ ^/(js|fonts) {
  access_log off;
  expires 1y;
  add_header Cache-Control private;
  try_files /dist$uri /app$uri =404;
}

location ~ ^/styles {
  access_log off;
  expires 1y;
  add_header Cache-Control private;
  try_files /dist$uri /app$uri @default;
}

location ~ ^/(img|documents) {
  access_log off;
  expires 5m;
  add_header Cache-Control private;
  try_files /dist$uri /app$uri =404;
}

